@import "normalize.styl"

gris_oscuro = #333333
gris_claro  = #818181
body 
	font-family 'Varela Round', sans-serif
	font-size 16px 
figure 
	margin 0 
.container
	padding 1.4rem
	font-size 0 
	text-align center
.name 
	color gris_oscuro
.author
	color gris_claro 
.song 
	width 8rem 
	display inline-block
	font-size 1rem 
	margin-right 1rem 
	text-align left
	&:nth-child(even)
		margin-right 0 
	p 
		margin .5em 0