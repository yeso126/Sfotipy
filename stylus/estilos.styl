@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro  = #818181
rojo        = #BD255B
body 
	font-family 'Varela Round', sans-serif
	font-size 16px 
figure 
	margin 0 
a
	text-decoration none
img
	vertical-align top
	
//buttons
.button-menu
	left .5em
	margin-top -10px
	position absolute
	top 50%
	color gris_oscuro
//oocss class
.container
	font-size 0 
	padding 1.4rem
	text-align center
.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin 0 
.action.gray
		color gris_claro
.actions
	position absolute
	bottom 0
	left 0 
	right 0 
	background rgba(black, .3)
.border-bottom
	border-bottom 1px solid gris_claro
.name 
	color gris_oscuro
.menu 
	display none
.relative
	position relative
.author
	color gris_claro 
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em
.left 
	float left
.right
	float right
.wrap
		width 1000px
.round 
	border-radius 50%
	overflow hidden
.progress 
	margin 1em 0 
	position relative
	.min
	.max
		font-size .8em
		top -5px
	.min
		position absolute
		left 0
	.max
		position absolute
		right 0 

	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75% 
	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		position relative
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		width 10px
		position absolute
		right 0
		top -2px
.header 
	
	height 3.5em
	// a 
	// 	display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
				
.song 
	display inline-block
	font-size 1rem 
	margin-right 1rem 
	text-align left
	width 8rem 
	&:nth-child(even)
		margin-right 0 
	p 
		margin .5em 0

.playing 
	// display none
	width 20em
.small
	width 20em


@media screen and (min-width:480px)

	.song
		&:nth-child(even)
			margin-right 1em 
	.image
		img 
			width 100%
			height auto
	.playing
		&.medium
			width auto
	
@media screen and (min-width:1000px)

	.button-menu
		display none
	.header
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo 
		padding 1.3em 0 
		overflow hidden 
	.avatar 
		width 38px
		height 38px
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after 
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 10px solid gris_claro
			content ""
			display inline-block 
			margin-left .4em